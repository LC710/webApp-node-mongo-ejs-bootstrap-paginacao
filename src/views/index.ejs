  <%- include('top.ejs') %>
    <p>Welcome to <%= title %></p>

    <table class="table table-striped table-bordered table-hover">

      <thead class="table-dark">
        <tr>
          <th scope="col" >Name</th>
          <th scope="col" >Excluir</th>
        </tr>
      </thead>

      <tbody>
        <% for(var i = 0; i < users.length; i++) { %>

          <tr>

            <td>
              <a href="/edit/<%= users[i]._id %>">
                <%= users[i].name %>
              </a>
            </td>
            
            <td>
              <a href="/delete/<%= users[i]._id %>" onclick="return confirm('Tem certerza que deseja excluir ?')" class="btn btn-danger">
                X
              </a>
            </td>

          </tr>
          
        <% } %>
        
      </tbody>
    
    </table>

    <hr />

    <p> <%= countUsers %> Clientes Encontrados ! </p>

    <nav aria-label="Paginação">

      <ul class="pagination">

        <% for(let i = 1; i <= qtdPaginas; i++) { %>
  
          <% if(i !== paginaAtual) { %>
  
            <li class="page-item" >
              <a class="page-link" href="/<%= i %>"> <%= i %> </a> 
            </li> 
          
          <% } else { %>

            <li class="page-item active" >
              <a class="page-link" href="/<%= i %>"> <%= i %> </a> 
            </li> 
  
          <% } %>
            
        <% } %> 

      </ul>

    </nav>

    
    <a href="/new" class="btn btn-primary">Cadastrar novo Cliente/User</a>
    
  <%- include('bottom.ejs') %>
